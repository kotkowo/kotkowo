<.section>
  <.breadcrumb>
    <:crumb navigate={~p"/aktualnosci"}>
      Aktualności
    </:crumb>
    <:crumb navigate={~p"/aktualnosci/z-ostatniej-chwili"} active>
      Z ostatniej chwili
    </:crumb>
  </.breadcrumb>
  <h1 class="text-primary text-center lg:text-justify lg:mt-0 mt-6 font-manrope font-extrabold xl:text-4xl text-3xl">
    Z ostatniej chwili
  </h1>
  <div class="flex flex-col mx-4 lg:mt-6 mt-8 gap-y-10">
    <.header_news_card
      :if={@header_news != nil}
      title={@header_news.title}
      image={@header_news.image.url}
      tags={@header_news.tags}
      news_id={@header_news.id}
      introduction={@article.introduction || ""}
    >
    </.header_news_card>
    <div class="lg:flex-row lg:items-justify max-sm:items-center flex-col flex lg:gap-y-0 gap-y-4 lg:gap-x-5">
      <.news_card
        :for={popular_news <- @popular_news}
        card_class="lg:w-[313px] w-[320px]"
        news_id={popular_news.id}
        title={popular_news.title}
        tags={popular_news.tags}
        src={popular_news.image.url}
      />
      <div class="lg:w-[646px] text-center lg:text-justify w-full lg:order-none order-first flex flex-col gap-y-6 lg:pl-8 pb-10 lg:self-start">
        <h1 class="text-primary font-manrope text-center lg:text-left font-extrabold text-3xl">
          Najczęściej czytane
        </h1>

        <a
          :for={titles <- @popular_titles}
          :if={@header_news != nil}
          href={~p"/aktualnosci/z-ostatniej-chwili/#{titles.id}"}
          class="text-2xl text-left line-clamp-2 font-manrope font-bold text-gray-800 pr-0 lg:pr-2"
        >
          <%= titles.title %>
        </a>
      </div>
    </div>
    <div :if={@news != []} class="flex flex-col lg:flex-row gap-y-5 lg:gap-y-0 lg:gap-x-5">
      <.news_card
        :for={news <- @news}
        class="lg:w-[313px] w-full"
        title={news.title}
        news_id={news.id}
        tags={news.tags}
        src={news.image.url}
      />
    </div>

    <.button
      class="self-center"
      type="outline"
      navigate={~p"/aktualnosci/z-ostatniej-chwili/wszystkie"}
    >
      Zobacz wszystkie
    </.button>
  </div>
</.section>
<.how_you_can_help />
