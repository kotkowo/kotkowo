<.section>
  <h1 class="text-primary text-center lg:text-justify lg:mt-0 mb-6 font-manrope font-extrabold xl:text-4xl text-3xl">
    Z ostatniej chwili
  </h1>
  <div class="lg:grid lg:grid-cols-4 mb-10 lg:mb-16 lg:grid-flow-row lg:gap-x-5 mx-5 lg:mx-0 flex flex-col gap-y-4 lg:gap-y-10">
    <.news_card
      :for={news <- @news}
      class="lg:w-[313px] w-full"
      title={news.title}
      tags={news.tags}
      src={Kotkowo.GalleryImage.url(news.image)}
    />
  </div>
  <div class="flex flex-col lg:flex-row justify-center relative">
    <div class="lg:mt-0 mt-10 self-center">
      <.pagination_bar selected_page={@page} last_page={10} />
    </div>
    <div class="lg:absolute right-0 -order-1 self-center">
      <form phx-change="items_amount" class="">
        <label class="font-inter mr-5 text-md">Poka≈º na stronie</label>
        <select name="items_per_page" class="rounded-lg">
          <option value="30" selected={@limit == 30}>30</option>
          <option value="60" selected={@limit == 60}>60</option>
          <option value="90" selected={@limit == 90}>90</option>
        </select>
      </form>
    </div>
  </div>
</.section>
